# Flask Configuration
FLASK_APP=app_updated.py
FLASK_ENV=development
DEBUG=True

# Database Configuration
DATABASE_URL=sqlite:///smart_bus_management.db
DB_TYPE=sqlite
SQLALCHEMY_ECHO=False

# For PostgreSQL
# DATABASE_URL=postgresql://user:password@localhost:5432/smart_bus_db
# DB_TYPE=postgresql

# For MySQL
# DATABASE_URL=mysql+pymysql://user:password@localhost:3306/smart_bus_db
# DB_TYPE=mysql

# Application
SECRET_KEY=your-secret-key-here
JWT_SECRET_KEY=your-jwt-secret-key

# CORS
CORS_ORIGINS=localhost:3000,localhost:8000

# Payment Gateway
RAZORPAY_KEY_ID=your_razorpay_key
RAZORPAY_KEY_SECRET=your_razorpay_secret

# Email Configuration
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your_email@gmail.com
MAIL_PASSWORD=your_app_password

# Google Maps
GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# Twilio (for SMS)
TWILIO_ACCOUNT_SID=your_twilio_sid
TWILIO_AUTH_TOKEN=your_twilio_token
TWILIO_PHONE_NUMBER=+1234567890

# Redis (for caching)
REDIS_URL=redis://localhost:6379/0

# AWS (for file uploads)
AWS_ACCESS_KEY_ID=your_aws_key
AWS_SECRET_ACCESS_KEY=your_aws_secret
AWS_S3_BUCKET=your_bucket_name
AWS_REGION=ap-south-1